<div class="flex flex-col" data-controller="dropdown--component" data-dropdown--component-url-value="<%=@url%>" data-action="keydown->dropdown--component#key_press">
    <div class="w-full md:w-1/2 flex flex-col items-center h-64">
        <div class="w-full px-4">
            <div class="flex flex-col items-center relative">
                <div class="w-full">
                    <div class="my-2 p-1 bg-white flex border border-gray-200 rounded">
                        <div class="flex flex-auto flex-wrap"></div>
                        <input placeholder="Product" class="p-1 px-2 appearance-none outline-none w-full text-gray-800"  data-dropdown--component-target="searchInput" data-action="keyup->dropdown--component#search">
                        <div>
                            <button class="cursor-pointer w-6 h-full flex items-center text-gray-400 outline-none focus:outline-none" data-dropdown--component-target="resetButton">
                                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x w-4 h-4">
                                    <line x1="18" y1="6" x2="6" y2="18"></line>
                                    <line x1="6" y1="6" x2="18" y2="18"></line>
                                </svg>
                            </button>
                        </div>
                        <div class="text-gray-300 w-8 py-1 pl-2 pr-1 border-l flex items-center border-gray-200">
                            <button class="cursor-pointer w-6 h-6 text-gray-600 outline-none focus:outline-none" data-action="click->dropdown--component#toggleMenu" data-dropdown--component-target="toggleButton">
                                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-up w-4 h-4">
                                    <polyline points="18 15 12 9 6 15"></polyline>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="hidden absolute shadow bg-white top-50 z-40 w-full lef-0 rounded max-h-select overflow-y-auto svelte-5uyqqj" data-dropdown--component-target="itemsContainer">
                    <div class="flex flex-col w-full" data-dropdown--component-target="items">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
