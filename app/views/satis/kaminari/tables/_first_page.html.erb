<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%unless current_page.first?%>
  <%= link_to url, remote: remote, 'data-turbo-frame'=> "#{params[:id]}", class: "relative inline-flex items-center px-3 py-3 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do%><i class="fal fa-chevrons-left"></i><%end%>
<%end%>

